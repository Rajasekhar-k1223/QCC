@{
    ViewBag.Title = "Login Register";
}
    <div ng-controller="LoginController">
        <style>
            header {
                box-shadow: #000 0px 1px 5px;
            }

            a {
                color: #000000;
                font-size: 1.4rem;
            }

            .dropdown > a {
                font-weight: bold;
            }

            .dropdown-menu > li > a {
                font-weight: bold;
                padding: 5%;
                text-align: center;
            }

            li {
                font-weight: bold;
                transition: all .7s;
            }

            .nav > li {
                transition: all .7s;
                border-radius: 5px;
                width: 153px;
                text-align: center;
                padding: 0.2%;
                color: #fff;
            }


                /*.nav > li:hover a {
                    color: #17a2b8;
                }*/

                .nav > li > a {
                    text-decoration: none;
                }

            .nav .open > a, .nav .open > a:focus, .nav .open > a:hover {
                border-color: none;
            }

            .navbar .nav > .open > a, .nav > .open > a:focus, .nav > .open > a:hover {
                background: #fff !important;
                color: #red;
                border-bottom: 4px solid red;
                transition: all .7s;
            }

            .navbar .navbar-nav > li > a:focus, .navbar .navbar-nav > li > a:hover {
                background: #fff !important;
                border-bottom: 4px solid red;
                color: red;
            }

            .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
                background: #fff !important;
                box-shadow: #000 0px 1px 4px;
                color: red;
                border-radius: 5px;
                transition: all .7s;
            }

            li:hover a {
                color: #fff;
            }

            .inputaddvalues {
                width: 100%;
                height: 30px;
                margin-top: 4px;
                font-size: 13px;
            }
        </style>
        <header>
            <nav class="navbar " style="padding:1%;padding-bottom:0px;">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#" style="padding:0px;"><img src="~/Img/logo.png" style="width:170px;" /></a>
                    </div>
                    <ul class="nav" style="width:60%;">
                        <li style="background:rgba(0, 123, 194,1);"><a href="/AReQCC/Login/LoginRegister" style="color:#fff;">Login Creation</a></li>
                        <li><a href="/AReQCC/Home/dashboard">Home</a></li>
                    </ul>
                    <div style="width: 20%;">
                        <div class="userDetailsLeft">
                            <div id="LoginDate" style="font-size: 12px;width: 200px;padding: 0% 0%;border-radius: 3px;text-align:right;font-weight: bold;"></div>
                            @*<img src="~/Img/avatar.jpg" style="width:35px;height:35px;" />*@
                            <div id="empcode" style="font-size: 12px;min-width: 200px;max-width:fit-content;margin-top:2px; padding: 1% 0%;border-radius: 3px;text-align:right;font-weight: bold;"></div>
                            <div class="text-primary" style="font-size:12px;font-weight:bold;margin-bottom: 15px;text-align:right;cursor:pointer;width:200px;text-decoration-line:underline;" ng-click="logout()">Sign Out</div>
                        </div>
                        <div class="userDetailsRight">
                            <img src="~/Img/avatar.jpg" style="width:55px;margin-top:5%;margin-left:15%;" />
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <form name="myform">
            <div class="container container-fluid mt-3" style="padding:0px;">
                <input type="hidden" value="@Session["empCode"]" id="myHiddenempCode" />
                <input type="hidden" value="@Session["roleId"]" id="myHiddenroleId" />
                <input type="hidden" value="@Session["empName"]" id="myHiddenempName" />
                <div class="row" style="margin:0px;padding:0px;">
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">CODE</span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                                <input class="form-control float-left inputaddvalues" type="number" name="" ng-model="EmpCode" min="0" ng-required="true" ng-blur="EmpCodeCheck()" />
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">
                                NAME
                            </span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                                <input class="form-control float-left inputaddvalues" type="text" name="" ng-model="EmpName" ng-required="true" ng-disabled="true" />
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">
                                GRADE
                            </span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                                <input class="form-control float-left inputaddvalues" type="text" name="" ng-model="Grade" ng-required="true" ng-disabled="true" />
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">
                                DEPARTMENT
                            </span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                                <input class="form-control float-left inputaddvalues" type="text" name="" ng-model="Department" ng-required="true" ng-disabled="true" />
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">
                                COMPANY
                            </span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                                <input class="form-control float-left inputaddvalues" type="text" name="" ng-animate="" ng-model="Company" ng-required="true" ng-disabled="true" />
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">
                                EMAIL
                            </span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                                <input class="form-control float-left inputaddvalues" type="email" name="" ng-animate="" ng-model="EmpMailId" ng-required="true" />
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">
                                PLANT
                            </span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                                <input class="form-control float-left inputaddvalues" type="text" name="" ng-animate="" ng-model="Plant" ng-required="true" ng-disabled="true" />
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">
                                BUSINESSUNIT
                            </span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                                <input class="form-control float-left inputaddvalues" type="text" name="" ng-animate="" ng-model="BusinessUnit" ng-disabled="true" />
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <div class="form-group m-2">
                            <span class="w-50 float-left text-left pr-1" style="font-size:14px;line-height:35px;">
                                ROLE
                            </span><span style="float:left;width:4%;line-height:35px;">:-</span><span style="width:46%;float:left;">
                            @*<span ng-if="null">*@
                                 <select ng-model="selectedItemvalue" class="form-control float-left inputaddvalues selectRole" ng-required="true" ng-change="checkRole()" >
                                    <option value="">--SELECT ROLE--</option>
                                    <option ng-repeat="role in Roles" ng-selected="selectedItemvalue == role.RoleId" value="{{role.RoleId}}" class="selectoption_{{role.RoleId}}">{{role.RoleName}}</option>
                                </select>
                            @*</span>*@
                            @*<span ng-if="!null">
                                <select ng-model="selectedItemvalue" class="form-control float-left inputaddvalues" ng-required="true" ng-change="checkRole()"   ng-disabled="roleID = !5">
                                    <option value="">--SELECT ROLE--</option>
                                    <option ng-repeat="role in Roles" ng-selected="selectedItemvalue == role.RoleId" value="{{role.RoleId}}" class="selectoption_{{role.RoleId}}">{{role.RoleName}}</option>
                                </select>
                                </span>*@
                            </span>
                        </div>
                    </div>
                </div>
                <div class="text-center" style="margin:auto;margin-top:4%;"><button class=" btn btn-info m-1" ng-click="myform.$valid &&Save()" type="submit" style="width:120px;font-size: 1.4rem;font-weight: 700;" id="save">Save</button><button class=" btn btn-info m-1" ng-click="myform.$valid &&Update()" type="submit" style="width:120px;font-size: 1.4rem;font-weight: 700;" id="update">Update</button></div>
                <div class="text-center" style="margin:auto;margin-top:4%;"><span style="color:green;font-size: 1.4rem;font-weight: 700;" id="status">{{StatusMessage}}</span></div>
                <div class="w-100 p-2"></div>
                <br />
                <br />
                <br />
                <div class="form-group">
                    <input type="text" ng-model="search" class="form-control" placeholder="Search" style="width:20%;padding: 0.375rem 1.75rem;font-size: 1.4rem;float:left" />
                    @*<input type="text" class="form-control" placeholder="Search for..." name="mySearch" ng-model="search">*@
                    <div style="float:right">
                        View <select ng-model="viewby" ng-change="setItemsPerPage(viewby)" id="viewby"><option>3</option><option>5</option><option>10</option><option>20</option><option>30</option><option>40</option><option>50</option><option>75</option><option>100</option></select> records at a time.
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover tabel-condensed datatableLogins">
                        <thead class="bg-info" style="color:#fff;font-weight:bold;text-align:center;font-size:14px;">
                            <tr>
                                <th>Id</th>
                                <th>Code</th>
                                @*<th>Password</th>*@
                                <th>Name</th>
                                <th>Grade</th>
                                <th>Department</th>
                                <th>Company</th>
                                <th>Mail</th>
                                <th>Plant</th>
                                <th>BusinessUnit</th>
                                <th>Role Level</th>
                                <th ng-hide="roleID != 5">Edit</th>
                                <th ng-hide="roleID != 5">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="user in filterData = (UserResponse | filter: search)| limitTo : pageSize : (currentPage - 1) * pageSize">
                                <th scope="row">
                                    {{$index + 1}}
                                </th>
                                <th ng-hide="true">
                                    {{user.Id}}
                                </th>
                                <td>
                                    {{user.EmpCode}}
                                </td>
                                @*<td>
            {{user.Password}}
        </td>*@
                                <td>
                                    {{user.EmpName}}
                                </td>
                                <td>
                                    {{user.Grade}}
                                </td>
                                <td>
                                    {{user.Department}}
                                </td>
                                <td>
                                    {{user.Company}}
                                </td>
                                <td>
                                    {{user.EmpMailId}}
                                </td>
                                <td>
                                    {{user.Plant}}
                                </td>
                                <td>
                                    {{user.BusinessUnit.trim()}}
                                </td>
                               
                                <td>
                                    <p ng-if="user.RoleId == 5">
                                        Admin
                                    </p>
                                    <p ng-if="user.RoleId == 4">
                                        Plant Login
                                    </p>
                                    <p ng-if="user.RoleId == 1">
                                        Level 1
                                    </p>
                                    <p ng-if="user.RoleId == 2">
                                        Level 2
                                    </p>
                                    <p ng-if="user.RoleId == 3">
                                        Level 3
                                    </p>
                                   

                                </td>

                                <td style="text-align:center" ng-hide="roleID != 5">
                                    <span ng-click="toggleEdit(user)" class="glyphicon glyphicon-pencil" style="cursor:pointer;"></span>
                                </td>
                                <td style="text-align:center" ng-hide="roleID != 5">
                                    <span ng-click="toggleDelete(user)" class="glyphicon glyphicon-remove"></span>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td align="center" colspan="12">
                                    <div class="pull-right">
                                        <ul uib-pagination total-items="filterData.length" ng-model="currentPage" items-per-page="pageSize"></ul>

                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    @*<uib-pagination ng-model="intCtrl.currentPage" total-items="totalCount" max-size="intCtrl.maxSize" ng-click="intCtrl.pageChanged()">
                    </uib-pagination>*@
                </div>
            </div>
        </form>
        <script src="~/Scripts/JsControllers/angular-1.5.8.js"></script>
        <script src="~/Scripts/JsControllers/angular-animate.js"></script>
        <script src="~/Scripts/JsControllers/angular-sanitize.js"></script>
        <script src="~/Scripts/JsControllers/ui-bootstrap-tpls-2.1.3.js"></script>
        <script src="~/Scripts/JsControllers/LoginRegister.js"></script>



    </div>
